  gem 'activerecord', '~> 4.2'
  gem 'sqlite3',      '~> 1.3.6'
end

appraise 'rails-5' do
  gem 'activerecord', '~> 5.2'
  gem "sqlite3", "~> 1.3", ">= 1.3.6"
end

appraise 'rails-6' do
  gem 'activerecord', '~> 6.0', '< 6.1'
  gem "sqlite3", "~> 1.4"
end
